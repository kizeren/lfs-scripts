# Depends on:  

name=
version=
release=
source=()

build() {
        cd $name-$version


        mkdir -pv $PKG/{bin,lib}
        mv -v   $PKG/usr/bin/{lzma,unlzma,lzcat,xz,unxz,xzcat} $PKG/bin
        mv -v $PKG/usr/lib/liblzma.so.* $PKG/lib
        ln -svf ../../lib/$(readlink $PKG/usr/lib/liblzma.so) $PKG/usr/lib/liblzma.so
}
